{
  "name": "acorn",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "rimraf --glob '**/.next' '**/.expo' '**/.turbo'",
    "dev": "bun clean; turbo dev --parallel",
    "lint": "turbo lint",
    "lint:types": "turbo lint:types",
    "nuke": "bun clean '**/node_modules'; rm bun.lockb",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.json": "prettier --write"
  },
  "devDependencies": {
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.12"
  },
  "packageManager": "bun@1.1.22"
}
