{
  "name": "acorn",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "rimraf --glob '**/.next' '**/.expo' '**/.turbo'",
    "dev": "bun clean; watchman shutdown-server; turbo dev --parallel",
    "lint": "bunx ultracite fix",
    "lint:types": "turbo lint:types",
    "nuke": "bun clean '**/node_modules' bun.lock",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "rimraf": "^6.0.1",
    "turbo": "2.5.6",
    "ultracite": "5.3.9"
  },
  "packageManager": "bun@1.2.22",
  "patchedDependencies": {
    "@bacons/apple-targets@3.0.2": "patches/@bacons%2Fapple-targets@3.0.2.patch"
  }
}
