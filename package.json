{
  "name": "acorn",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "rimraf --glob '**/.next' '**/.expo' '**/.turbo'",
    "dev": "bun clean; watchman shutdown-server; turbo dev --parallel",
    "lint": "bunx ultracite fix",
    "lint:types": "turbo lint:types",
    "nuke": "bun clean '**/node_modules' bun.lock",
    "prepare": "husky",
    "tunnel": "ngrok http --url=e9edd5b7510d.ngrok-free.app 3000"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "turbo": "2.7.3",
    "ultracite": "7.0.8"
  },
  "packageManager": "bun@1.3.5",
  "patchedDependencies": {
    "expo-video@3.0.15": "patches/expo-video@3.0.15.patch",
    "ffmpeg-kit-react-native@6.0.2": "patches/ffmpeg-kit-react-native@6.0.2.patch"
  }
}
